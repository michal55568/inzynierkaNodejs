<div class="container">
    <h1>Edytuj użytkownika</h1>

    <div class="row p-4">
        <div class="col-md-10">
            <form action="/admin/users/edit/{{users._id}}?newMethod=PUT" method="post">

                <div class="form-group">
                    <label for="firstName">Imię</label>
                    <input type="text" class="form-control" name="firstName" id="firstName" placeholder="" value={{users.firstName}}>
                </div>
                <div class="form-group">
                    <label for="lastName">Nazwisko</label>
                    <input type="text" class="form-control" name="lastName" id="lastName" placeholder="" value={{users.lastName}}>
                </div>
                <div class="form-group">
                    <label for="email">Adres email</label>
                    <input type="text" class="form-control" name="email" id="email" placeholder="" value={{users.email}}>
                </div>

                <button class="btn btn-outline-success btn-lg" type="submit">Zaktualizuj</button>
            </form>
        </div>
    </div>
</div>
